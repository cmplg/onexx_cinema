<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:ns="http://www.doremilabs.com/dc/dcp/ws/v1/schemas/diagnostics" xmlns:com="http://www.doremilabs.com/dc/dcp/ws/v1/schemas/common" targetNamespace="http://www.doremilabs.com/dc/dcp/ws/v1/schemas/diagnostics" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xsd:import namespace="http://www.doremilabs.com/dc/dcp/ws/v1/schemas/common" schemaLocation="Common.xsd"/>

	<xsd:simpleType name="ReportId">
		<xsd:restriction base="xsd:long"/>
	</xsd:simpleType>
	<xsd:simpleType name="ReportTaskStateInfo">
		<xsd:restriction base="xsd:token">
			<xsd:enumeration value="Unknown"/>
			<xsd:enumeration value="Pending"/>
			<xsd:enumeration value="Running"/>
			<xsd:enumeration value="Completed"/>
			<xsd:enumeration value="Cancelled"/>
			<xsd:enumeration value="Failed"/>
		</xsd:restriction>
	</xsd:simpleType>
	<xsd:complexType name="ReportTaskInfo">
		<xsd:sequence>
			<xsd:element name="reportId" type="ns:ReportId"/>
			<xsd:element name="filename" type="xsd:string"/>
			<xsd:element name="state" type="ns:ReportTaskStateInfo"/>
			<xsd:element name="creationDate" type="xsd:dateTime">
			<!-- date and time when the report has been created -->
			</xsd:element>
			<xsd:element name="size" type="xsd:unsignedLong">
			<!-- size of report file in bytes -->
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="ArrayOfReportTaskInfo">
		<xsd:sequence>
			<xsd:element name="reportTaskInfo" type="ns:ReportTaskInfo" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
  <xsd:simpleType name="DiagnosticTaskType">
    <xsd:restriction base="xsd:token">
      <xsd:enumeration value="StorageSMART"/>
      <xsd:enumeration value="StorageBenchmark"/>
      <xsd:enumeration value="StorageAll"/>
    </xsd:restriction>
  </xsd:simpleType>
  <xsd:simpleType name="DiagnosticTaskStatus">
    <xsd:restriction base="xsd:token">
			<xsd:enumeration value="Unknown"/>
			<xsd:enumeration value="Running"/>
			<xsd:enumeration value="Completed"/>
			<xsd:enumeration value="Failed"/>
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>
